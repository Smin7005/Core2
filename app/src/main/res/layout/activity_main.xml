<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        style="@style/fontStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:weightSum="20">

        <TableRow
            style="@style/fontStyle"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="7">

            <ImageView
                android:id="@+id/image1"
                style="@style/fontStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/image01" />

            <ImageView
                android:id="@+id/image2"
                style="@style/fontStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/image02" />
        </TableRow>

        <TableRow
            style="@style/fontStyle"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2">

            <TextView
                android:id="@+id/name1"
                style="@style/fontStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                style="@style/fontStyle"
                android:id="@+id/name2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            style="@style/fontStyle">

            <TextView
                style="@style/fontStyle"
                android:id="@+id/grade1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                style="@style/fontStyle"
                android:id="@+id/grade2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="7"
            style="@style/fontStyle">

            <ImageView
                android:id="@+id/image3"
                style="@style/fontStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/image03" />

            <ImageView
                android:id="@+id/image4"
                style="@style/fontStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/image04" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            style="@style/fontStyle">

            <TextView
                style="@style/fontStyle"
                android:id="@+id/name3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                style="@style/fontStyle"
                android:id="@+id/name4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            style="@style/fontStyle">

            <TextView
                style="@style/fontStyle"
                android:id="@+id/grade3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                style="@style/fontStyle"
                android:id="@+id/grade4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>